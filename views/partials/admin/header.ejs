<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/styles/admin-dashboard.css" />
  

  <style>
    /* Ensure the sidebar is scrollable */
    #sidebar {
      position: fixed;
      top: 0;
      bottom: 0;
      left: 0;
      width: 270px;
      background-color: #343a40;
      overflow-y: auto; 
      max-height: 100vh; 
    }


    
    .nav-link {
      color: white;
    }

    .nav-link:hover {
      color: #00aaff;
    }

    .text-muted {
      color: #6c757d !important;
    }


    @media (max-width: 767px) {
      body {
        margin-left: 0;
      }

      #sidebar {
        position: absolute;
        top: 0;
        left: -270px; 
        transition: left 0.3s ease;
      }

      #sidebar.show {
        left: 0; 
      }
    }
  </style>

</head>
<body style="line-height: 42.8px;">

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse show">
        <div class="position-sticky pt-3">
          <div class="text-center ">
            <img src="/images/download.jpeg" alt="Profile Image" width="60" height="60" style="border-radius: 50%;">
            <h5 class="text-white mb-0">Jeff Bezos</h5>
            <p class="text-muted">PRODUCT MANAGER</p>
          </div>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link text-white" onclick="navigateTo('/admin/dashboard')">
                <i class="bi bi-speedometer2 me-2"></i>
                Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white active" onclick="navigateTo('/admin/usermanage')">
                <i class="bi bi-people me-2"></i>
                Users Management
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" onclick="navigateTo('/admin/productmanage')">
                <i class="bi bi-box me-2"></i>
                Products Management
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" onclick="navigateTo('/admin/orders')">
                <i class="bi bi-cart me-2"></i>
                Orders Management
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" onclick="navigateTo('/admin/categorymanage')">
                <i class="bi bi-tags me-2"></i>
                Category Management
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" onclick="navigateTo('/admin/coupons')">
                <i class="bi bi-ticket-perforated me-2"></i>
                Coupon Management
              </a>
            </li>
          </ul>
          <hr class="text-white-50">
          <ul class="nav flex-column mb-2">
            <li class="nav-item">
              <a class="nav-link text-white" href="#">
                <i class="bi bi-gear me-2"></i>
                Settings
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="#">
                <i class="bi bi-question-circle me-2"></i>
                Help
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="#">
                <i class="bi bi-box-arrow-right me-2"></i>
                Logout Account
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>

 
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const sidebar = document.getElementById('sidebar');
    
    function toggleSidebar() {
      sidebar.classList.toggle('show');
    }

  </script>

</body>
</html>
