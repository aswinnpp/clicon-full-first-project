function setColorBeforeSubmit(event) {
    // Prevent form submission if no color is selected
    const selectedColorElement = document.querySelector('.color-option.selected');
    if (!selectedColorElement) {
        alert("Please select a color before adding to cart.");
        event.preventDefault();  // Stop form submission
        return;
    }

    // Set selected color in the hidden input field
    const selectedColor = selectedColorElement.getAttribute('data-value');
    document.getElementById('selectedColorInput').value = selectedColor;
   

}



function buy(stock, id) {
    if (stock < 1) {
        return;
    }

    const qty = document.getElementById('qty').value;

    // Get the selected color
    const selectedColorElement = document.querySelector('.color-option.selected');
    if (!selectedColorElement) {
        alert("Please select a color.");
        return;
    }

    const selectedColor = selectedColorElement.getAttribute('data-value');

    // Redirect without encoding (not recommended if color names contain spaces)
    window.location.href = `/buynow/${id}?qty=${qty}&color=${selectedColor.replace(/\s+/g, '-')}`;
}
