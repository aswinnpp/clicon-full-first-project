        document.addEventListener("DOMContentLoaded", function () {
    const qtyInput = document.getElementById("qty");
    const stock = document.getElementById("stk").value
    

    function checkMaxLimit() {
        const maxQty =5 
        const currentQty = parseInt(qtyInput.value, 10);

        
        if (currentQty > stock) {
            qtyInput.value = stock; 
            qtyInput.setAttribute("max", stock);  
            qtyInput.setAttribute("readonly", "true");  
            
            showCustomAlert(`Stock limit exceeded.   Only ${stock}  available`);
        } else if (currentQty >= maxQty) {
            qtyInput.value = maxQty; 
            showCustomAlert(`Maximum quantity allowed is ${maxQty}`);
        } else if (currentQty === 5) {
            showCustomAlert("Quantity is exactly 5");
        }
    }


    
    qtyInput.addEventListener("input", checkMaxLimit);
    qtyInput.addEventListener("change", checkMaxLimit);
});

function showCustomAlert(message) {
    const notification = document.getElementById("customNotification");
    const messageElement = notification.querySelector(".notification-message");

    messageElement.textContent = message;
    notification.classList.add("active");

    setTimeout(() => {
        notification.classList.remove("active");
    }, 5000);  // Hide after 3 seconds
}


