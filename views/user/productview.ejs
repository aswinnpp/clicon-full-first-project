    <script>
        let selectedRam = null;
        let selectedStorage = null;
    
        document.querySelectorAll('.variant-option').forEach(option => {
            option.addEventListener('click', function () {
                let type = this.getAttribute('data-type');
                let value = this.getAttribute('data-value');
    
                // Remove previous selection highlight in the same category
                document.querySelectorAll(`.variant-option[data-type="${type}"]`).forEach(el => {
                    el.style.backgroundColor = "#ffffff";
                    el.style.border = "1px solid #000";
                    el.style.color = "#000";
                });
    
                // Highlight the selected option
                this.style.backgroundColor = "#B78628";
                this.style.color = "#ffffff";
                this.style.border = "1px solid #0056b3";
    
                if (type === 'ram') {
                    selectedRam = value;
                } else if (type === 'storage') {
                    selectedStorage = value;
                }
    
                // Enable storage options only after RAM is selected
                if (selectedRam) {
                    document.querySelectorAll('.variant-option[data-type="storage"]').forEach(el => {
                        el.style.pointerEvents = "auto";
                        el.style.opacity = "1";
                    });
                }
            });
        });
    
        // Initially disable storage selection until RAM is chosen
        document.querySelectorAll('.variant-option[data-type="storage"]').forEach(el => {
            el.style.pointerEvents = "none";
            el.style.opacity = "0.5";
        });
   
    
    
// ================================color selection ========================================
    document.querySelectorAll('.color-option').forEach(option => {
    option.addEventListener('click', function() {
        // Remove "selected" class from all colors
        document.querySelectorAll('.color-option').forEach(el => el.classList.remove('selected'));

