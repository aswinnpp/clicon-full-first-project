function fillAddress(street, city, state, country, postalCode, phone) {
    const inputs = document.getElementsByClassName('form-control');
    
    Array.from(inputs).forEach(input => {
        const label = input.previousElementSibling?.textContent.toLowerCase() || '';
        
        if (label.includes('street')) input.value = street;
        if (label.includes('city')) input.value = city;
        if (label.includes('state')) input.value = state;
        if (label.includes('country')) input.value = country;
        if (label.includes('postcode') || label.includes('zip')) input.value = postalCode;
        if (label.includes('phone')) input.value = phone;
    });
}


