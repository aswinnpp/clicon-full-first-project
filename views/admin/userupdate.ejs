<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <!-- <link rel="stylesheet" href="/public/css/styles/user-update.css"> -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body style="line-height: 42.8px;">

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse show">
      <div class="position-sticky pt-3">
        <div class="text-center ">
           <img src="/images/download.jpeg" alt="Profile Image" width="60" height="60" style="border-radius: 50%;">
          <h5 class="text-white mb-0">Jeff Bezos</h5>
          <p class="text-muted">PRODUCT MANAGER</p>
        </div>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link text-white"  onclick="navigateTo('/admin/dashboard')">
              <i class="bi bi-speedometer2 me-2"></i>
              Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white active"  onclick="navigateTo('/admin/usermanage')">
              <i class="bi bi-people me-2"></i>
              Users Management
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white"  onclick="navigateTo('/admin/productmanage')">
              <i class="bi bi-box me-2"></i>
              Products Management
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white"  onclick="navigateTo('/admin/orders')">
              <i class="bi bi-cart me-2"></i>
              Orders Management
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white"  onclick="navigateTo('/admin/categories')">
              <i class="bi bi-tags me-2"></i>
              Category Management
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" onclick="navigateTo('/admin/coupons')">
              <i class="bi bi-ticket-perforated me-2"></i>
              Coupon Management
            </a>
          </li>
        </ul>
        <hr class="text-white-50">
        <ul class="nav flex-column mb-2">
          <li class="nav-item">
            <a class="nav-link text-white" href="#">
              <i class="bi bi-gear me-2"></i>
              Settings
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="#">
              <i class="bi bi-question-circle me-2"></i>
              Help
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="#">
              <i class="bi bi-box-arrow-right me-2"></i>
              Logout Account
            </a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4 d-md-none">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Update User</a>
          <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle navigation" id="menuBtn">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
      </nav>
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Update User</h1>
      </div>

      <form>
        <div class="mb-3">
          <label for="userName" class="form-label">User Name</label>
          <input type="text" class="form-control" id="userName" placeholder="Enter user name">
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email Address</label>
          <input type="email" class="form-control" id="email" placeholder="Enter email address">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" placeholder="Enter password">
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input type="file" class="form-control" id="image">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  function navigateTo(path) {
    window.location.href = path;
  }

  document.addEventListener('DOMContentLoaded', function () {
  const menuBtn = document.getElementById('menuBtn');
  const sidebar = document.getElementById('sidebar');

  menuBtn.addEventListener('click', function () {
    sidebar.classList.toggle('d-none'); // Toggle visibility for mobile
  });
});

</script>
</body>
</html>
