<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Information</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
    />
    <style>
      .product-details {
        max-width: 800px;
        margin: auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .product-info {
        margin-top: 20px;
      }
      .reviews {
        margin-top: 30px;
      }
      .gallery-img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        margin: 5px;
        border-radius: 8px;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <div class="product-details">
        <div class="text-center mb-4">
          <img
            src="<%= product[0].image[0] %>"
            alt="<%= product.productname %>"
            class="product-img"
          />
        </div>
        <h2><%= product.productname %></h2>
        <div class="product-info">
          <p><strong>Category:</strong> <%= product[0].category %></p>
          <p><strong>Brand:</strong> <%= product[0].brand %></p>
          <p><strong>Price:</strong> â‚¹<%= product[0].price %></p>
          <p><strong>Offer:</strong> <%= product[0].offer %>%</p>
          <p><strong>Stock:</strong> <%= product[0].stock %></p>
          <p><strong>Warranty:</strong> <%= product[0].warranty %> year(s)</p>
          <p>
            <strong>Return Policy:</strong> <%= product[0].returnPolicy %> Days
          </p>
          <p><strong>Color:</strong> <%= product[0].color %></p>
        </div>

        <!-- Image Gallery -->
        <div class="gallery">
          <h4>Gallery</h4>
          <div class="d-flex flex-wrap">
            <% product[0].image.forEach(image => { %>

            <img src="<%= image %>" alt="Product Image" class="gallery-img" />
            <% }); %>
          </div>
        </div>

        <!-- Reviews Section -->
        <div class="reviews">
          <h4>Reviews</h4>
          <div class="mb-3">
            <label for="rating" class="form-label">Rating :</label>
            <input
              type="text"
              class="form-control"
              id="rating"
              placeholder="Enter your rating"
            />
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
