<%- include('../partials/admin/header') %>

<!-- Main Content -->
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <!-- Mobile Toggle Button -->
  <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4 d-md-none">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Product Management</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        aria-controls="sidebar"
        aria-expanded="false"
        aria-label="Toggle navigation"
        id="menuBtn"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>

  <!-- Product Management Table -->
  <div class="d-flex justify-content-between mb-3">
    <h2>Product Status</h2>
    <form action="/admin/productcreate" method="get">
      <button class="btn btn-warning mt-3">Create</button>
    </form>
  </div>

  <div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="Search Products" />
    <button class="btn btn-primary">Search</button>
  </div>

  <!-- Make the table responsive -->
  <div class="table-responsive">
    <table class="table table-dark table-striped table-hover">
      <thead>
        <tr>
          <th>Category</th>
          <th>Name</th>
          <th>Brand</th>
          <th>Offer</th>
          <th>Price</th>
          <th>Stock</th>
          <th>Warranty</th>
          <th>Color</th>
          <th>Ram</th>
          <th>Storage</th>
          <th>Description</th>
          <th>Rating</th>
          <th>Images</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (products && products.length > 0) { %> <% for (let i = 0; i < products.length; i++) { %>
        <tr>
          <td><%= products[i].category %></td>
          <td><%= products[i].productname %></td>
          <td><%= products[i].brand %></td>
          <td><%= products[i].offer %></td>
          <td><%= products[i].price %></td>     
          <td><%= products[i].stock %></td>
          <td><%= products[i].warranty %></td>
          <td><%= products[i].color %></td>
          <td><%= products[i].ram %></td>
          <td><%= products[i].storage %></td>
          <td><%= products[i].description %></td>
          <td><%= products[i].rating %></td>
          <td>

            <div class="d-flex flex-wrap gap-2">
              <% if (products[i].image && products[i].image.length > 0) { %>
                <img
                  src="/uploads/<%= products[i].image[0] %>"
                  alt="productImage"
                  width="100"
                  height="100"
                  class="img-thumbnail"
                  loading="lazy"
                />
              <% }%>
             
            </div>
          </td>
          <td>
            <div class="d-flex flex-column gap-2">
              <form
                action="/admin/productupdate/<%= products[i]._id %>"
                method="get"
              >
                <button class="btn btn-success btn-sm w-100">Update</button>
              </form>

              <button 
              class="btn btn-danger btn-sm" 
              onclick="toggleProductStatus('<%= products[i]._id %>', <%= products[i].isDeleted %>)">
              <%= products[i].isDeleted ? 'List' : 'Unlist' %>
            </button>
            
             

              <form
                action="/admin/productview/<%= products[i]._id %>"
                method="get"
              >
                <button class="btn btn-info btn-sm w-100">View</button>
              </form>
            </div>
          </td>
        </tr>
        <% } %> <% } else { %>
        <tr>
          <td colspan="12">No products available.</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-center mt-3 pagination-container">
    <ul class="pagination">
      <!-- Previous button with left arrow -->
      <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
        <a class="page-link" href="?page=<%= currentPage - 1 %>">←</a> <!-- Left Arrow -->
      </li>
  
      <!-- Page Numbers -->
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= i %>"><%= i %></a>
        </li>
      <% } %>
  
      <!-- Next button with right arrow -->
      <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
        <a class="page-link" href="?page=<%= currentPage + 1 %>">→</a> <!-- Right Arrow -->
      </li>
    </ul>
  </div>
  

</main>


<style>
  

  .pagination-container {
    position: fixed;
    bottom: 0; 
    left: 50%;
    transform: translateX(-50%);
    z-index: 999; 
    display: flex;
    justify-content: center;
    width: 100%;
    padding: 10px;
    box-sizing: border-box;
    
  }
  
  
  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px; 
    margin: 0;
  }
  
  
  .pagination .page-link {
    display: inline-block;
    background-color: transparent; 
    color: rgb(97, 69, 122); 
    text-align: center;
    font-size: 16px; 
    line-height: 30px; 
    text-decoration: none;
    cursor: pointer;
    padding: 5px 10px; 
  }
  
  
  .pagination .page-item.active .page-link {
    font-weight: bold;
    color: black; 
  }
  
  
  .pagination .page-item.disabled .page-link {
    color: #ccc; 
    cursor: not-allowed;
  }
  
  
  .pagination .page-link:hover {
    background-color: #f0f0f0; 
    border-radius: 4px;
  }
  
  
  @media (max-width: 768px) {
    
    .pagination-container {
      padding: 10px 20px;
    }
  
    .pagination .page-link {
      font-size: 14px; 
    }
  }
  
  
  @media (max-width: 480px) {
    
    .pagination .page-link {
      font-size: 12px; 
    }
  
    .pagination-container {
      padding: 10px 15px; 
    }
  }
  
  
    
    </style>



<script>



 function toggleProductStatus(productId, isDeleted) {
  const action = isDeleted ? 'list' : 'unlist';
  Swal.fire({
    title: `Are you sure you want to ${action} this product?`,
    text: `This product will be ${action === 'unlist' ? 'hidden' : 'visible'} to users.`,
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#d33",
    cancelButtonColor: "#3085d6",
    confirmButtonText: `Yes, ${action} it!`
  }).then((result) => {
    if (result.isConfirmed) {
      console.log(typeof isDeleted);
      
      fetch(`productdelete/${productId}`, { 
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ isDeleted}) 
      })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            Swal.fire('Success!', `Product has been ${action}ed.`, 'success')
              .then(() => location.reload());
          } else {
            Swal.fire('Error!', data.message || `Failed to ${action} product.`, 'error');
          }
        })
        .catch((ee) => {
          console.log('jjk'+ee);
          
          Swal.fire('Error!', 'Something went wrong. Please try again.', 'error');
        });
    }
  });
}



  </script>


