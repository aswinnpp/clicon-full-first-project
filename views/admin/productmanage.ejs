<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Management</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
    />
    
  </head>
  <body style="line-height: 42px">
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <nav
          id="sidebar"
          class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse show"
        >
          <div class="position-sticky pt-3">
            <div class="text-center mb-4">
              <img
                src="/images/download.jpeg"
                alt="Profile Image"
                width="60"
                height="60"
                style="border-radius: 50%"
              />
              <h5 class="text-white mb-0">Jeff Bezos</h5>
              <p class="text-muted">PRODUCT MANAGER</p>
            </div>
            <ul class="nav flex-column">
              <li class="nav-item">
                <a
                  class="nav-link text-white"
                  href="#"
                  onclick="navigateTo('/admin/dashboard')"
                >
                  <i class="bi bi-speedometer2 me-2"></i>
                  Dashboard
                </a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-white active"
                  onclick="navigateTo('/admin/usermanage')"
                >
                  <i class="bi bi-people me-2"></i>
                  Users Management
                </a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-white"
                  onclick="navigateTo('/admin/productmanage')"
                >
                  <i class="bi bi-box me-2"></i>
                  Products Management
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-white" onclick="navigateTo('orders')">
                  <i class="bi bi-cart me-2"></i>
                  Orders Management
                </a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-white"
                  onclick="navigateTo('categories')"
                >
                  <i class="bi bi-tags me-2"></i>
                  Category Management
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-white" onclick="navigateTo('coupons')">
                  <i class="bi bi-ticket-perforated me-2"></i>
                  Coupon Management
                </a>
              </li>
            </ul>
            <hr class="text-white-50" />
            <ul class="nav flex-column mb-2">
              <li class="nav-item">
                <a class="nav-link text-white" href="#">
                  <i class="bi bi-gear me-2"></i>
                  Settings
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-white" href="#">
                  <i class="bi bi-question-circle me-2"></i>
                  Help
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-white" href="#">
                  <i class="bi bi-box-arrow-right me-2"></i>
                  Logout Account
                </a>
              </li>
            </ul>
          </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <!-- Mobile Toggle Button -->
          <nav
            class="navbar navbar-expand-md navbar-dark bg-dark mb-4 d-md-none"
          >
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Product Management</a>
              <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#sidebar"
                aria-controls="sidebar"
                aria-expanded="false"
                aria-label="Toggle navigation"
                id="menuBtn"
              >
                <span class="navbar-toggler-icon"></span>
              </button>
            </div>
          </nav>

          <!-- Product Management Table -->
          <div class="d-flex justify-content-between mb-3">
            <h2>Product Status</h2>
            <button class="btn btn-warning">Create</button>
          </div>

          <div class="input-group mb-3">
            <input
              type="text"
              class="form-control"
              placeholder="Search Products"
            />
            <button class="btn btn-primary">Search</button>
          </div>

          <table class="table table-dark table-striped table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Offer</th>
                <th>Stock</th>
                <th>Warranty</th>
                <th>Color</th>
                <th>Description</th>
                <th>Rating</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Boat Airpodes</td>
                <td>Speaker</td>
                <td>Boat</td>
                <td>2999</td>
                <td>10%</td>
                <td>150</td>
                <td>1 Year</td>
                <td>Black</td>
                <td>Wireless Bluetooth</td>
                <td>4.5</td>
                <td>
                  <button class="btn btn-success btn-sm">Update</button>
                  <button class="btn btn-danger btn-sm">Delete</button>
                  <button class="btn btn-info btn-sm">View</button>
                </td>
              </tr>
              <tr>
                <td>Noise Icon</td>
                <td>Smart Watch</td>
                <td>Noise</td>
                <td>1599</td>
                <td>15%</td>
                <td>200</td>
                <td>2 Years</td>
                <td>Silver</td>
                <td>Fitness Tracking</td>
                <td>4.7</td>
                <td>
                    
                  <button class="btn btn-success btn-sm">Update</button>
                  <button class="btn btn-danger btn-sm">Delete</button>
                  <button class="btn btn-info btn-sm" >View</button>  
                    
                
                 
                </td>
              </tr>
            </tbody>
          </table>
        </main>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      function navigateTo(path) {
        window.location.href = path;
      }

      document.addEventListener('DOMContentLoaded', function () {
  const menuBtn = document.getElementById('menuBtn');
  const sidebar = document.getElementById('sidebar');

  menuBtn.addEventListener('click', function () {
    sidebar.classList.toggle('d-none'); // Toggle visibility for mobile
  });
});
    </script>
  </body>
</html>
