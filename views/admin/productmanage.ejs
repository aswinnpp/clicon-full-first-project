<%- include('../partials/admin/header') %>

<!-- Main Content -->
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <!-- Mobile Toggle Button -->
  <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4 d-md-none">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Product Management</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        aria-controls="sidebar"
        aria-expanded="false"
        aria-label="Toggle navigation"
        id="menuBtn"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>

  <!-- Product Management Table -->
  <div class="d-flex justify-content-between mb-3">
    <h2>Product Status</h2>
    <form action="/admin/productcreate" method="get">
      <button class="btn btn-warning mt-3">Create</button>
    </form>
  </div>

  <div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="Search Products" />
    <button class="btn btn-primary">Search</button>
  </div>

  <!-- Make the table responsive -->
  <div class="table-responsive">
    <table class="table table-dark table-striped table-hover">
      <thead>
        <tr>
          <th>Category</th>
          <th>Name</th>
          <th>Brand</th>
          <th>Price</th>
          <th>Offer</th>
          <th>Stock</th>
          <th>Warranty</th>
          <th>Color</th>
          <th>Description</th>
          <th>Rating</th>
          <th>Images</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (products && products.length > 0) { %> <% for (let i = 0; i <
        products.length; i++) { %>
        <tr>
          <td><%= products[i].category %></td>
          <td><%= products[i].productname %></td>
          <td><%= products[i].brand %></td>
          <td><%= products[i].price %></td>
          <td><%= products[i].offer %></td>
          <td><%= products[i].stock %></td>
          <td><%= products[i].warranty %></td>
          <td><%= products[i].color %></td>
          <td><%= products[i].description %></td>
          <td><%= products[i].rating %></td>
          <td>
            <% if (products[i].image && products[i].image.length > 0) { %>
            <div class="d-flex flex-wrap gap-2">
              <% for (let j = 0; j < Math.min(products[i].image.length, 3); j++)
              { %>
              <img
                src="<%= products[i].image[j] %>"
                alt="<%= products[i].productname %> - Image <%= j + 1 %>"
                width="50"
                height="50"
                class="img-thumbnail"
                loading="lazy"
              />
              <% } %> <% if (products[i].image.length > 3) { %>
              <span class="badge bg-secondary align-self-center"
                >+<%= products[i].image.length - 3 %> more</span
              >
              <% } %>
            </div>
            <% } else { %>
            <span>No images</span>
            <% } %>
          </td>
          <td>
            <div class="d-flex flex-column gap-2">
              <form
                action="/admin/productupdate/<%= products[i]._id %>"
                method="get"
              >
                <button class="btn btn-success btn-sm w-100">Update</button>
              </form>
              <button class="btn btn-danger btn-sm w-100">Delete</button>
              <form
                action="/admin/productview/<%= products[i]._id %>"
                method="get"
              >
                <button class="btn btn-info btn-sm w-100">View</button>
              </form>
            </div>
          </td>
        </tr>
        <% } %> <% } else { %>
        <tr>
          <td colspan="12">No products available.</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</main>

<%- include('../partials/admin/footer') %>
